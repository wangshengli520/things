top: 80rpx;
display: none;
}
.show{ 
 display: block;
}
.zanwu{
  font-size: 36rpx;
  color: #666;
  line-height: 100rpx;
  text-align: center;
}
.lode{
  text-align: center;
  font-size: 28rpx;
  color: #9f9f9f;
  line-height: 80rpx;
}
 .animation-element-wrapper {
  display: flex;  
  position: fixed;
  left: 0;
  top:0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.4);
}
.animation-element {
  display: flex;
