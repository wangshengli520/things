/* pages/Provisions/Provisions.wxss */

.header-content{
  height: 205rpx;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
}
.head{
  width: 750rpx;
  height: 125rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 125rpx;
  color: #383838;
}
.retrieve{
  width: 680rpx;
  height: 80rpx;
  margin: auto;
  border:3rpx solid #9f9f9f;
  border-radius: 15rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;

}
.swiper{
  width: 50%;
  height: 80rpx;
  color: #383838;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
}
.active{
  background: #374256;
  color: #fff;
}
.list{
  width: 750rpx;
  margin: auto;
  margin-top: 210rpx;
}
.company{
  width: 680rpx;
  height: 120rpx;
  padding: 0 36rpx;
  border-bottom: 2rpx solid #f4f2f2;
  line-height: 40rpx;
  color: #383838;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center; 
}
.right{
  width: 15rpx;
  height: 30rpx;
}
.right image{
  width: 100%;
  height: 100%;
}
.left{
  width: 640rpx;
  height: 100%;
  line-height: 120rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  color: #383838;
}
.lode{
  text-align: center;
  font-size: 28rpx;
  color: #9f9f9f;
  line-height: 100rpx;
}

