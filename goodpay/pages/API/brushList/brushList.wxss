/* pages/brushList/brushList.wxss */
.header-content{
  height: 300rpx;
  width: 750rpx;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
}
.head{
  width: 680rpx;
  height: 78rpx;
  display: flex;
  margin: 0 auto;
   margin-top: 40rpx;
  justify-content: space-between;
  border: 1rpx solid #9f9f9f;
  align-items: center;
  border-radius: 39rpx;
  background: #fff;
}
.image{
  width: 45rpx;
  height: 45rpx;
  margin-left: 30rpx;
}
.input{
  width: 600rpx;
  height: 78rpx;
  color: #585858;
  font-size: 30rpx;
  text-indent: 30rpx;
}
.inputClass{
  text-indent: 30rpx;
}
.tips{
  height: 60rpx;
  width: 680rpx;
  margin: 0 auto;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #585858;
  text-align: center;
  margin-top: 40rpx;
  border: 1rpx solid #f2efef;
}
.brushList{
  margin-top: 300rpx;
}
.brushList-item{
  height: 74rpx;
  width: 700rpx;
  margin: 0 auto;
  font-size: 30rpx;
  color: #383838;
  line-height: 74rpx;
  border-bottom: 1rpx solid #f2efef;
}
.lode{
  text-align: center;
  font-size: 28rpx;
  color: #9f9f9f;
  line-height: 80rpx;
}
.th{
  height: 74rpx;
  width: 700rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #9f9f9f;
  background: #FFF;
}
.td{
  float: left;
  width: 33%;
  font-size: 30rpx;
  line-height: 74rpx;
  text-align: center;
  border-right: 1rpx solid #9f9f9f;
}
.td:last-child{
  border-right: none;
}