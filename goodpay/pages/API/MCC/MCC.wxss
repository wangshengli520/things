/* pages/MCC/MCC.wxss */
.title{
  height: 120rpx;
  width: 680rpx;
  margin: 0 auto;
  line-height: 120rpx;
  font-size: 32rpx;
  text-align: center;
  color: #383838;
}
.userInput{
  height: 80rpx;
  width: 680rpx;
  margin: 0 auto;
  font-size: 32rpx;
  color: #383838;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.userInput-lt{
  font-size: 32rpx;
}
.userInput-rt{
  height: 100%;
  width:580rpx;
  font-size: 26rpx;
  border-bottom: 3rpx solid #585858;
  text-indent: 10rpx;
}
.btn{
  height: 84rpx;
  width: 680rpx;
  margin: 0 auto;
  margin-top: 58rpx;
  background: #374256;
  color: #fff;
  line-height: 84rpx;
  font-size: 32rpx;
}
.btn:active{
  opacity: .9;
}
.posShow{
  width: 610rpx;
  margin: 0 auto;
  box-shadow: 0px 0px 5rpx #374256 inset; 
  border:1px solid #999;
  border-radius: 15rpx;
  margin-top: 64rpx;
  padding: 0 35rpx 35rpx 20rpx;
  margin-bottom: 30rpx;
}
.pos-container{
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #383838;
}
.bank_logo{
  display: block;
  height:58rpx;
  width:206rpx;
  margin-bottom: 30rpx;
}