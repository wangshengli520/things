/* pages/information/information.wxss */

.head{
  width: 630rpx;
  height: 80rpx;
  border: 3rpx solid #c3c3c3;
  margin: auto;
  margin-top: 45rpx;
  border-radius: 65rpx;
  display: flex;
  padding: 0 25rpx;
}
.image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 15rpx;
  float: left;
}

.input{
  width: 560rpx;
  height: 80rpx;
  float: left;
  margin-left: 20rpx;
  color: #585858;
  font-size: 36rpx;
}
.swiper{
  width: 680rpx;
  height: 105rpx;
  padding: 0 36rpx;
  border-bottom: 4rpx solid #dcdcdc;
  display: flex;
  justify-content: space-between;
}
.details{
  width: 20%;
  height: 105rpx;
  line-height: 105rpx;
  font-size: 34rpx;
  color: #585858;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list{
  width: 750rpx;
  height: 830rpx;
  margin: auto;
}
.list-name{
  width: 680rpx;
  height: 200rpx;
  padding: 0 36rpx;
  border-bottom: 3rpx solid #f4f2f2;
  font-size: 28rpx;
  color: #585858;
  display: flex;
}
.log{
  width: 140rpx;
  height: 140rpx;
  overflow: hidden;
  margin-top: 30rpx;
  border-radius: 10rpx;
}
.log image{
  width: 100%;
  height: 100%;
}
.headline{
  width: 75%;
  height: 140rpx;
  float: left;
  margin-top: 30rpx;
  margin-left: 45rpx;
}
.text{
  width: 100%;
  height: 70rpx;
  text-align: left;
  color: #585858;
  font-size: 28rpx;
}
.text-name{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  color: #9f9f9f;
}
.text-male{
  margin-left: 30rpx;
}
.text-woma{
  margin-left: 15rpx;
}
.data{
  margin-left: 50rpx;
}
