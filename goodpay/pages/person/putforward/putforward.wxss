/* pages/putforward/putforward.wxss */
.sum-item{
  height: 90rpx;
  width: 640rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
}
.item-lt{
  width: 158rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.item-rt{
  height: 90rpx;
  width: 480rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cancel{
  height: 47rpx;
  width: 47rpx;
}
.arrow{
  font-size: 40rpx;
   color: #a9a7a7; 
}
.picker{
  height: 90rpx;
  width:450rpx;
  line-height: 90rpx;
}
.backName{
  height: 90rpx;
  width:450rpx;
  line-height: 90rpx;
  text-indent: 130rpx;
}
.putforwardnum{
  width: 640rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin:0 auto;
  font-size: 32rpx;
  color: #383838;
}
.inputView{
   height: 100rpx;
    border-bottom: 1rpx solid #bdbdbd;
    width: 640rpx;
    margin: 0 auto;
    display: flex;
    align-items: center;
}
.account{
  height: 144rpx;
  width: 640rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}
.account-lt,.account-rt{
  line-height: 144rpx;
}
.balance,.account-rt{
  color: #374256;
}
.btn{
  height: 90rpx;
  width: 680rpx;
  margin: 0 auto;
  border: none;
  background: #374256;
  color: #fff;
  font-size:34rpx;
  line-height: 90rpx;
  margin-top: 60rpx;
}
.btn:active{
  opacity: .9;
}
.popup,.popup2{
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, .5);
  z-index: 999;
  display: none;
}
.showToast{
  height: 290rpx;
  width: 620rpx;
  background: #fff;
  text-align: center;
  line-height: 290rpx;
  border-radius: 20rpx;
  position: absolute;
  top: 520rpx;
  left:65rpx;
}
.show{ 
 display: block;
}
.popup2-container{
  height: 870rpx;
  width: 750rpx;
  background: #fff;
  position: absolute;
  left:0;
  bottom: 0;
}
.header{
  height: 80rpx;
  width: 640rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  position: relative;
}
.title{
  height: 80rpx;
  width: 640rpx;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
  line-height:80rpx;
  color: #383838;
  font-size: 32rpx;
  z-index: 998;
}
.close{
  line-height: 80rpx;
  font-size: 40rpx;
  color: #9f9f9f;
  position: absolute;
  z-index: 999;
  padding: 0 20rpx;
}
.close:active{
  opacity: .9;
}
.bank-item,.add-content{
  height: 140rpx;
  width: 640rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bank-icon image{
  height: 80rpx;
  width: 80rpx;
}
.bank-name{
  height: 140rpx;
  line-height: 140rpx;
  margin-left:88rpx;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.bank-names{
  width: 340rpx;
  height: 140rpx;
  line-height: 140rpx;
}
.bank-status{
  height: 50rpx;
  width: 50rpx;
  margin-right: 20rpx;
  font-size:46rpx;
  color: #4aa7fd;
}
.bank-status image{
    height: 50rpx;
    width: 50rpx;
}
.active{
  display: block;
}
.hide{
  display: none;
}
.input-left{padding-left:20rpx;}